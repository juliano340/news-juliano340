# Configurações do Worker
CRON_FREQUENCY=0 */2 * * *
USE_AI=false
OPENROUTER_KEY=sua_chave_aqui
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
EDITORIAL_ENABLED=true
EDITORIAL_MIN_SCORE=70
EDITORIAL_AUTO_DISCARD=true
EDITORIAL_NICHE=ia-para-desenvolvedores
QUALITY_WEIGHT_SECTIONS=35
QUALITY_WEIGHT_SUMMARY_BULLETS=15
QUALITY_WEIGHT_PRIMARY_SOURCE=20
QUALITY_WEIGHT_EDITORIAL_ANALYSIS=15
QUALITY_WEIGHT_MIN_LENGTH=15
QUALITY_MIN_SUMMARY_BULLETS=3
QUALITY_MIN_WHY_CHARS=180
QUALITY_MIN_PRACTICAL_CHARS=100
QUALITY_MIN_CONTENT_CHARS=550

# Caminhos
REPO_PATH=/opt/news-worker
POSTS_PATH=/opt/news-worker/content/posts

# Configurações Git
GIT_USER_NAME=News Worker
GIT_USER_EMAIL=worker@juliano340.com

# Limites
MAX_POSTS_PER_SOURCE=10
REQUEST_TIMEOUT=30000

# Logs
LOG_LEVEL=info
LOG_FILE=/var/log/news-worker.log
